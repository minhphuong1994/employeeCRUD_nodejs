<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <title>Display</title>
</head>
<body>
    
      
    <a class="btn btn-link" href="/add">Add New Employee</a>
    <table class="table table-striped">
        <tr class="bg-dark text-white text-center">
            <th>Name</th>
            <th>City</th>
            <th>Contact</th>
            <th>Email</th>     
            <th>Salary</th>                   
            <th>Delete</th>
            <th>Update</th>
        </tr>
        <%for(let i=0;i<data.length;i++){%>   
            <tr class="text-center">
                <td><%=data[i].name%></td>
                <td><%=data[i].city%></td>
                <td><%=data[i].contact%></td>
                <td><%=data[i].email%></td>
                <td><%=data[i].salary%></td>
                <td>
                    <a class="btn btn-danger" href="/delete/<%=data[i].id%>">Delete</a>
                </td>
                <td>
                    <a class="btn btn-success" href="/edit/<%=data[i].id%>">Update</a>
                </td>
            </tr>
        <%}%>
    </table>  
</body>
</html>